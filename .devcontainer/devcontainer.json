{
  "name": "Scheme (Racket) Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "johnknot.vscode-racket",
        "aaron-bond.better-comments"
      ],
      "settings": {
        "racket.executablePath": "/usr/bin/racket",
        "files.associations": { "*.rkt": "racket" }
      }
    }
  },
  "postCreateCommand": "echo 'Welcome to Racket!'"
}
